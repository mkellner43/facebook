<div class="container mb-4">
  <%= form_with model: @profile do | f | %>
    <div class="d-flex flex-column align-items-center">
      <%= f.text_field :first_name, placeholder: "First Name", class:"form-control mb-2", style:"width: 30rem" %>
      <%= f.text_field :last_name, placeholder: "Last Name", class:"form-control mb-2", style:"width: 30rem" %>
      <%= f.date_field :dob, class:"form-control mb-2", style:"width: 30rem", data_provide:"datepicker" %>
      <%= f.text_field :address, placeholder: "Address", class:"form-control mb-2", style:"width: 30rem" %>
      
      <%= f.submit "Submit", class:"btn btn-primary btn-sm mt-2", style: "width: 18rem"%>
    </div>
  <% end %>
 </div>